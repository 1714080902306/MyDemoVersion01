<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/et_add_china"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="中文术语：" />
    <EditText
        android:id="@+id/et_item_china"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="160dp"
        android:hint="请输入中文术语：" />

    <View
        android:layout_width="233dp"
        android:layout_height="5px"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="200dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/et_add_english"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="英文术语：" />
    <EditText
        android:id="@+id/et_item_english"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="220dp"
        android:hint="请输入中文术语：" />

    <View
        android:layout_width="233dp"
        android:layout_height="5px"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="260dp"
        android:background="@android:color/darker_gray" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="相应解释：" />

    <EditText
        android:id="@+id/et_item_explain"
        android:layout_width="280dp"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="100dp"
        android:layout_height="160dp"
        android:layout_marginTop="280dp"
        android:hint="请输入相应的解释："/>
</RelativeLayout>